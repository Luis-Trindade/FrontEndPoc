    function changeCSS(cssFile, cssLinkIndex) {

        var oldlink = document.getElementsByTagName("link").item(cssLinkIndex);

        var newlink = document.createElement("link");
        newlink.setAttribute("rel", "stylesheet");
        newlink.setAttribute("type", "text/css");
        newlink.setAttribute("href", cssFile);

        document.getElementsByTagName("head").item(0).replaceChild(newlink, oldlink);
    }
</script>
{{#if temModal}}
    <script href="parsley.remote.js"></script>
    <script>

        window.Parsley.addValidator('validanif', {
            validateString: function(value) {
                var tokenValue = sessionStorage.getItem("token");
                var validaNifUrl = '/api/clientes/valida_nif?nif=' + value + "&auth=" + tokenValue;
                var isValid;
                $.ajax({
                    type: 'GET',
                    url: validaNifUrl,
                    async: false,
                    success: function (result) {
                        console.log(result);
                        isValid = true;
                    },
                    error: function (result) {
                        console.log(result);
                        isValid = false;
                    }
                });
                return isValid;
            },
            messages: {
                'pt-pt': 'Este NIF é inválido',
                'en': 'Invalid fiscal number'
            }
        });

        $(document).ready(function() {

            var frm = $('#modal_form');
            frm.parsley({
                /*successClass: "has-success",*/
                errorClass: "has-error",
                classHandler: function(el) {
                    return el.$element.closest("div");
                },
                errorsWrapper: "<span class='help-block'></span>",
                errorTemplate: "<span></span>"
            });
            // bind 'myForm' and provide a simple callback function
            $('#modal_submit').click(function () {
                var tokenValue = sessionStorage.getItem("token");
                var urlWithAuth = frm.attr('action') + "?auth=" + tokenValue;
                if(frm.parsley().validate()) {
                    $('#{{ modal_id }}').modal('hide');
                    $.ajax({
                        type: frm.attr('method'),
                        url: urlWithAuth,
                        data: frm.serialize(),
                        cache: false,
                        success: function (result) {
                            console.log(result);
                            if(result.client){
                                $('#errmsg-header').html("Sucesso");
                                $('#errmsg-usermsg').html("A operação foi concluida com sucesso. " + {{{ mensagem_sucesso_modal }}});
                                $('#errmsg-button').toggleClass('btn-danger btn-success');
                                $('#errmsg-button').toggleClass('btn-info btn-success');
                                $('#errmsg-button').click(function(e){
                                    e.preventDefault();
                                    window.location = {{{ sucess_follow_link }}} + "?auth=" + tokenValue;
                                });
                                $('#errmsg-dialog').modal('show');
                            } else {
                                window.location.replace('/login');
                            }
                        },
                        error: function (result) {
                            console.log(result);
                            $('#errmsg-header').html("Erro");
                            $('#errmsg-usermsg').html("Houve um erro na operação: " + result.responseText);
                            $('#errmsg-button').toggleClass('btn-success btn-danger');
                            $('#errmsg-button').toggleClass('btn-info btn-danger');
                            $('#errmsg-dialog').modal('show');
                        }
                    });

                }
            });
        });
    </script>
{{/if}}
<script>
    $(document).ready(function() {
        $('a').attr('href', function (index, value) {
            if(value=="#"){ return value;}
            var tokenValue = sessionStorage.getItem("token");
            if(tokenValue){
                return value + '?auth=' + tokenValue;
            } else {
                return value;
            }
        });
    });
